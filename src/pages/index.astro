---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPostPreview from '../components/BlogPostPreview';
import PostSorter from '../components/PostSorter';
import { SITE } from '../config';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let { title } = SITE;
let description = "A place where I'll put some of my projects, writing, and miscellaneous.";
let permalink = 'https://example.com/';

// Data Fetching: List all Markdown posts in the repo.

let allPosts = await Astro.glob('./posts/*.md');

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en" data-theme="autumn">
	<head>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body class="max-w-7xl mx-auto px-4 sm:px-8">
		<BlogHeader />
		<div class="wrapper">
			<main class="content">
				<section class="intro pb-4">
					<h1 class="title">Greetings to</h1>
					<p>{description}</p>
				</section>
				<br/>
				<section class="social border-b-4 pb-8">
					<h1 class="title">Social</h1>
					<p>You can reach me out here:</p>
					<div class="flex flex-col">
						<a href="https://spacehey.com/nickorfield" target="_blank">Spacehey</a>
						<a href="mailto:nick.orfield1@gmail.com" target="_blank">Mail</a>
					</div>
				</section>
				<br/>
				<section aria-label="Blog post list" class="border-b-4 pb-10">
					<h1 class="title text-warning">The Blog</h1>
					<PostSorter allPosts={allPosts} client:only="react"/>
				</section>
			</main>
			<footer>
			<a href="/admin" class="hidden">Admin Dashboard üîê</a>
			</footer>
		</div>
	</body>
</html>
